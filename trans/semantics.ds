  MCallImpl([Part(ID(name),NoArgType(),NoArgs())]) :: E, H, OH --> v
    where
      print(StringV("reading real method from environment")) => _;
      print(Binding(E)) => _;
      print(getHeap(H)) => _;
      print(getOHeap(OH)) => _;
      print(StringV(name)) => _;
      readName(name) => i;
      print(NumV(i)) => _;
      readO(i) --> Method([], e, cs);
      cs :: Env e --> v;
      print(v) => _.

