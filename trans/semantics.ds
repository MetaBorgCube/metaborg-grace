  MethodDecl(
    NoPrefix(),
    [MethodID(ID(name),NoArgType(),NoAnnotations(),NoParams())],
    NoMethodType(),
    MethodBody(
      cs
    ),
    NoWhere()
  ) :: Env e --> Done() :: Env e'
    where
      Method([], e, cs) => o;
      print(Binding(e)) => _;
      bindName(name, allocateO(o)) => e'; // saves and returns done 
      print(Binding(e')) => _. 
  
  
  O Object(_, _, eEnc) |- MCallWDot(Outer(),[Part(ID(name),NoArgType(),NoArgs())]) --> v
    where
      print(StringV("reading from outer")) => _;
      print(Binding(eEnc)) => _;
      eEnc[name] => i;
      print(NumV(i)) => _;
      read(i) => v;
      Done() => v. 
   
